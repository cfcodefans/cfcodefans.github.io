{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext", //has to be commonjs for ts-node
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"],
      "containers/*": ["src/containers/*"],
      "types/*": ["types/*"],
      "tests/*": ["tests/*"]
    },
    "lib": ["dom", "es2015", "es2016", "ESNext"]
  },
  "include": ["tests/**/*"],
  "exclude": ["artifacts/**/*", "dist/**/*", "public/**/*", "node_modules", "node_modules/**/*"]
}
